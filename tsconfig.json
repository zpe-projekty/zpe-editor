{
    "include": [
        "**/*",
        "emulator/**/*",
        "packages/duct-tape/**/*"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./build",
        "rootDirs": [
            "./src",
            "./emulator/build",
        ],
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "duct-tape": [
                "./packages/duct-tape/src/index.ts"
            ]
        }
    }
}